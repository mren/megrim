#!/usr/bin/env node

pg = require('pg.js');

migrate = require('../migrate');

databaseUrl = process.env.DATABASE_URL;

if(!databaseUrl) {
    console.log('No DATABASE_URL found in environment.');
    return;
}

pg.connect(databaseUrl, function(err, client, done) {
    if(err) {
      throw err;
    }
    migrate('schema', client, function(err, results) {
        if(err) {
          console.error(err);
        }
        if(results) {
          console.log(results);
          console.log('done');
        }
        done()
        pg.end()
    });
});
